%p#notice= notice
#entry-show
  .card.mb-3
    .card-body
      .d-flex.justify-content-between.align-items-center
        .card-title.d-flex.justify-content-start.align-items-baseline
          %h4= @entry.title
          .card-subtitle.text-muted.ps-2
            = @entry.start_date.strftime("%B %d, %Y")
        .dropdown.pointer
          .bi.bi-three-dots{'data-bs-toggle': "dropdown" }
          %ul.dropdown-menu
            %li
              = link_to edit_entry_path(@entry), class: 'dropdown-item' do
                Edit
            %li
              = link_to @entry, method: :delete, class: 'dropdown-item', data: { confirm: 'Are you sure?' } do
                Destroy

      .row
        .col-12.col-sm-6
          .card-text.text-muted
            = @entry.description

      .row.my-3
        .col
          .entry-content.card-text
            = @entry.content



      %br

      - if @entry.main_image.attached?
        = image_tag @entry.main_image.representation(resize_to_limit: [100, 100])

      %br

      - if @entry.images.attached?
        %ul
          - @entry.images.each do |image|
            %li
              - if image.representable?
                = image_tag image.representation(resize_to_limit: [100, 100])
              - else
                = link_to rails_blob_path(image, disposition: :attachment) do
                  = image_tag "placeholder.png", alt: "Download file"



  .btn.btn-secondary= link_to 'Back', entries_path