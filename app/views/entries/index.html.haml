.d-flex.justify-content-between.align-items-center
  %h1 Entries
  .btn.btn-primary= link_to 'New Event', new_entry_path
- @entries.each do |entry|
  .card.mb-3
    .card-body
      .d-flex.justify-content-between.align-items-center
        .card-title.m-0
          %h5= entry.title
        .dropdown.pointer
          .bi.bi-three-dots{'data-bs-toggle': "dropdown" }
          %ul.dropdown-menu
            %li
              = link_to entry, class: 'dropdown-item' do
                Show
            %li
              = link_to edit_entry_path(entry), class: 'dropdown-item' do
                Edit
            %li
              = link_to entry, method: :delete, class: 'dropdown-item', data: { confirm: 'Are you sure?' } do
                Destroy

      .card-subtitle.text-muted
        = entry.start_date.strftime("%B %d, %Y")
      %p.card-text.text-muted
        = simple_format entry.description
