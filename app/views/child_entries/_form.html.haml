= form_for [@entry, @child_entry] do |f|
  - if @child_entry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@child_entry.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @child_entry.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :start_date
    = f.text_field :start_date,
    data: { controller: "flatpickr", flatpickr_date_format: "%B %d %Y", enable_time: true }
  -#.field
  -#  = f.label :end_date
  -#  = f.text_field :end_date,
  -#  data: { controller: "flatpickr", flatpickr_date_format: "%B %d %Y", enable_time: true }
  .field
    = f.label :event_type
    = f.text_field :event_type
  .field
    = f.label :status
    = f.text_field :status
  %br
  .field
    = f.rich_text_area :content

  .actions
    = f.submit 'Save'
