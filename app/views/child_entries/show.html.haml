%p#notice= notice
#entry-show
  .card
    .card-body
      .d-flex.justify-content-between.align-items-center
        .card-title.d-flex.justify-content-start.align-items-baseline
          %h4= @child_entry.title
          .card-subtitle.text-muted.ps-2
            = @child_entry.start_date.strftime("%B %d, %Y")
        .dropdown.pointer
          .bi.bi-three-dots{'data-bs-toggle': "dropdown" }
          %ul.dropdown-menu
            %li
              = link_to edit_parent_entry_child_entry_path(@parent_entry, @child_entry), class: 'dropdown-item' do
                Edit
            %li
              = link_to @entry, method: :delete, class: 'dropdown-item', data: { confirm: 'Are you sure?' } do
                Destroy

      .row
        .col-12.col-sm-6
          .card-text.text-muted
            = @child_entry.description

      .row.my-3
        .col
          .entry-content.card-text
            = @child_entry.content

%br

- if @child_entry.main_image.attached?
  = image_tag @child_entry.main_image.representation(resize_to_limit: [100, 100])

%br

- if @child_entry.images.attached?
  %ul
    - @child_entry.images.each do |image|
      %li
        - if image.representable?
          = image_tag image.representation(resize_to_limit: [100, 100])
        - else
          = link_to rails_blob_path(image, disposition: :attachment) do
            = image_tag "placeholder.png", alt: "Download file"