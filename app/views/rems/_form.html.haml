= form_for @rem do |f|
  - if @rem.errors.any?
    #error_explanation
      %h2= "#{pluralize(@rem.errors.count, "error")} prohibited this rem from being saved:"
      %ul
        - @rem.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :content
    = f.text_field :content
  .actions
    = f.submit 'Save'
