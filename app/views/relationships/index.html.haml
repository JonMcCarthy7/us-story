- @entries.each do |entry|
  .row
    .col.d-flex{class: entry.type === "ParentEntry" ? "justify-content-center" : (entry.user == current_user ? "justify-content-start" : "justify-content-end") }
      = link_to entry_path(entry) do
        .card.mb-3(style="max-width: 540px;")
          .row.g-0
            .col-md-4
              %img.img-fluid.rounded-start(alt="..." src="https://via.placeholder.com/150")/
            .col-md-8
              .card-body
                %h5.card-title
                  = entry.title
                %p.card-text
                  = entry.start_date
                - if entry.type == 'ParentEntry'
                  %p.card-text
                    %small.text-muted= entry.child_entries.count


%br


